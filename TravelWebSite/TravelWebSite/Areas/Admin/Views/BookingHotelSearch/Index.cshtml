@model IEnumerable<BookingHotelSearchVm.Result>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
    double Score;
}

<h1>Booking Otel Rezervasyon Sayfası</h1>

<h3>Arama Yapılan Şehir:Berlin/Almanya</h3>

<table class="table table-striped">
    <tr>
        <th>$</th>
        <th>Otel Adı</th>
        <th>Otel Puanı</th>
        <th>Otel Değerlendirmesi</th>
        <th>Detaylar</th>

    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.hotel_name</td>
            @{
                Score = double.Parse(item.review_score.ToString ())/ 10;
            }
            <td>@Score</td>
            @{
                if(item.review_score_word=="Very good")
                {
                    <td>Çok İyi</td>
                }
                if (item.review_score_word == "Good")
                {
                    <td>İyi</td>
                }
                if (item.review_score_word == "Fabulous")
                {
                    <td>Mükemmel</td>
                }
                
            }
            <td><a href="" class="btn btn-outline-dark">Detaylar</a></td>

        </tr>
    }
</table>

<a href="/Admin/BookingHotelSearch/GetCityDestinationId/" class="btn btn-primary">Idye göre getir</a>