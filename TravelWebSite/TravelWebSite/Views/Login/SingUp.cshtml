@model TravelWebSite.Models.UserRegisterVM

@{
	Layout = null;
}
<!DOCTYPE html>
<html lang="zxx">

<head>
	<title>Invent Signup Form Responsive Widget Template | Home :: W3layouts</title>
	<!-- Meta tag Keywords -->
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta charset="UTF-8" />
	<meta name="keywords"
		  content="Invent Signup Form Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template, Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
	<script>
		addEventListener("load", function () {
			setTimeout(hideURLbar, 0);
		}, false);

		function hideURLbar() {
			window.scrollTo(0, 1);
		}
	</script>
	<!-- //Meta tag Keywords -->
	<!--/Style-CSS -->
	<link rel="stylesheet" href="~/web/css/style.css" type="text/css" media="all" />
	<!--//Style-CSS -->
</head>

<body>
	<!-- /login-section -->
	<section class="w3l-login-6">
		<div class="login-hny">
			<div class="form-content">
				<div class="form-right">
					<div class="overlay">
						<div class="grid-info-form">
							<h5>Travel Rezervasyon</h5>
							<h3>Hesap Oluşturun </h3>
							<p>
								Birbirinden deneyimli rehberler eşliğinde Avrupanın Heryerini gezme şansını yakalayabilirsiniz.
							</p>
							<a href="~/web/index.html" class="read-more-1 btn">Hadi Başlayalım</a>
						</div>

					</div>
				</div>
				<div class="form-left">
					<div class="middle">
						<h4>Bize Katılın</h4>
						<p>Hemen Ücretsiz Hesap Oluşturun</p>
					</div>
					<form method="post" class="signin-form">
						<div class="form-input">
							<label>Ad</label>
							<input type="text" asp-for="Name"  />
							<span asp-validation-for="Name" class="text-danger"></span>
						</div>
						<div class="form-input">
							<label>Soyadınız</label>
							<input type="text" asp-for="Surname"/>
							<span asp-validation-for="Surname" class="text-danger"></span>
						</div>
						<div class="form-input">
							<label>Kullanıcı Adı</label>
							<input type="text" required asp-for="UserName" />
							<span asp-validation-for="UserName" class="text-danger"></span>
						</div>
						<div class="form-input">
							<label>Email</label>
							<input type="email" required asp-for="Email" />
							<span asp-validation-for="Email" class="text-danger"></span>
						</div>
						<div class="form-input">
							<label>Şifre</label>
							<input type="password" asp-for="Password" />
							<span asp-validation-for="Password" class="text-danger"></span>
						</div>
						<div class="form-input">
							<label>Şifre Tekrar</label>
							<input type="password" asp-for="ConfirmPassword" />
							<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
						</div>
						<div class="text-danger" asp-validation-summary="ModelOnly"></div>

						<label class="container">
							Şartları Okudum <a href="#">Kabul ediyorum</a><a href="#"></a>
							<input type="checkbox">
							<span class="checkmark"></span>
						</label>
						<button class="btn">Kayıt Ol</button>
					</form>
					<div class="copy-right text-center">
						<p>
							@DateTime.Now.Year Tüm Hakları Saklıdır
							<a href="http://w3layouts.com/" target="_blank">W3layouts</a>
						</p>
					</div>
				</div>

			</div>

		</div>
	</section>
	<!-- //login-section -->
</body>
<script src="/lib/jquery/dist/jquery.js"></script>
<script src="/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

</html>