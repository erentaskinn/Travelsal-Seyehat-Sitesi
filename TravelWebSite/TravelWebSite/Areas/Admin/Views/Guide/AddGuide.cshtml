@model Travels_EntityLayer.Concrete.Guide
@{
    ViewData["Title"] = "AddGuide";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Yeni Rehber Oluşturma Sayfası</h1>

<form method="post">
    <div class="form-group">
        @Html.Label("Ad Soayd")
        <input type="text" asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Görsel")
        <input type="text" asp-for="Image" class="form-control" />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Instagram URL")
        <input type="text" asp-for="InstagramUrl" class="form-control" />
        <span asp-validation-for="InstagramUrl" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Twitter URL")
        <input type="text" asp-for="TwitterUrl" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <br />
    <br />
    <div class="form-group">
        @Html.Label("Açıklama")
        <textarea cols="30" rows="5" class="form-control" asp-for="Description"></textarea>
        <span asp-validation-for="Name"></span>
    </div>
    <br />
    <button class="btn btn-outline-success">Oluştur</button>
</form>
