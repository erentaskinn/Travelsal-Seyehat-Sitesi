@model GetDestinationByIDQueryResult
@{
    ViewData["Title"] = "GetDestination";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Lokasyon Düzenleme Sayfası</h2>

<form method="post">
    <input type="hidden" asp-for="DestinationId" />
    <label>Şehir</label>
    <br />
    <input type="text" asp-for="City" class="form-control" />
    <br />
    <label>Gün Gece</label>
    <br />
    <input type="text" asp-for="DateNight" class="form-control" />
    <br />
    <label>Fiyat</label>
    <br />
    <input type="text" asp-for="Price" class="form-control" />
    <br />
    <button class="btn btn-outline-success">Lokasyon Bilgilerini Güncelle</button>
</form>

