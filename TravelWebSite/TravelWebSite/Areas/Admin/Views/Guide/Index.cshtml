@using Travels_EntityLayer.Concrete
@model List<Guide>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h1>Rehberlerimiz</h1>

<table class="table table-bordered">
    <tr>
        <th>&</th>
        <th>Görsel</th>
        <th>Ad Soyad</th>
        <th>Açıklama</th>
        <th>Durum</th>
        <th>Düzenle</th>

    </tr>
    @foreach(var item in Model){
        { count +=1; }
        <tr>
            <td>@count</td>
            <td><img src="@item.Image"/></td>
            <td>@item.Name</td>
            <td>@item.Description</td>
            @if (item.Status == true)
            {
                <td><a href="/Admin/Guide/ChangeToFalse/@item.GuidId" class="btn btn-outline-warning">Pasif Yap</a></td>
            }
            else
            {
                <td><a href="/Admin/Guide/ChangeToTrue/@item.GuidId" class="btn btn-outline-info">Aktif Yap</a></td>
            }
            <td><a href="/Admin/Guide/EditGuide/" class="btn btn-outline-success">Düzenle</a></td>
        </tr>
    }
</table>
<a href="/Admin/Guide/AddGuide/" class="btn btn-outline-primary">Yeni Rehber Oluştur</a>